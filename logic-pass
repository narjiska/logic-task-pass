#remove any given character from a string:

name = "Narjis"
new_name = name.replace("i","")
print(new_name)


#find all prime numbers up to a given range of numbers:

lower_value = int(input("Please, insert the lowest range value: "))
upper_value =int(input("Now insert the upper value range: "))

print("the prime numbers in the range are:")
for number in range(lower_value,upper_value+1):
    if number > 1:
        for i in range (2,number):
            if number %i == 0:
                break
            else:
                 print(number)
                 


#count how many times the given character repeated in a given string:

string= "god is good"
function= (string.count("g"))
print(function)
                 
